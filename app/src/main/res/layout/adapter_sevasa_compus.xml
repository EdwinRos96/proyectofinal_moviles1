<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AdapterSevasaCompus">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tvPrecio"
        android:layout_below="@+id/tvResolucion"
        android:layout_alignRight="@+id/tvResolucion"
        android:layout_alignEnd="@+id/tvResolucion"
        android:layout_alignLeft="@+id/tvResolucion"
        android:layout_alignStart="@+id/tvResolucion"
        android:textColor="@android:color/black" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imgSevasaPC"
        android:contentDescription="imagen1"
        android:visibility="visible"
        android:longClickable="true"
        android:layout_alignTop="@+id/tvMarcaCam"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/tvTipo"
        android:layout_toLeftOf="@+id/textView39"
        android:layout_toStartOf="@+id/textView39" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Computadora"
        android:id="@+id/textView39"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ofertas del mes"
        android:id="@+id/textView40"
        android:textColor="#182bd6"
        android:textSize="25dp"
        android:textIsSelectable="false"
        android:lines="@integer/abc_config_activityDefaultDur"
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imgSevasaPC"
        android:layout_toStartOf="@+id/imgSevasaPC" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tvMarcaCam"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/textView39"
        android:layout_alignLeft="@+id/tvResolucion"
        android:layout_alignStart="@+id/tvResolucion"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tvResolucion"
        android:layout_below="@+id/tvMarcaCam"
        android:layout_toRightOf="@+id/imgSevasaPC"
        android:layout_toEndOf="@+id/imgSevasaPC"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tvTipo"
        android:layout_below="@+id/tvPrecio"
        android:layout_toRightOf="@+id/imgSevasaPC"
        android:layout_toEndOf="@+id/imgSevasaPC"
        android:textColor="@android:color/black" />
</RelativeLayout>
