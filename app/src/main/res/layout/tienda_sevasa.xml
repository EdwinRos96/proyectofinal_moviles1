<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TiendaSevasa">

    <ImageView
        android:layout_width="153dp"
        android:layout_height="153dp"
        android:id="@+id/imageView2"
        android:layout_gravity="right|center_vertical"
        android:src="@mipmap/ic_launcher2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/imageView3"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="167dp"
        android:layout_height="167dp"
        android:id="@+id/imageView3"
        android:layout_gravity="left|center_vertical"
        android:src="@mipmap/ic_launcher3"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView42"
        android:layout_alignEnd="@+id/textView42"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="167dp"
        android:layout_height="167dp"
        android:id="@+id/imageView4"
        android:layout_gravity="left|center_vertical"
        android:src="@mipmap/ic_launcher4"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2"
        android:layout_below="@+id/textView44"
        android:visibility="invisible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/botonSevComp"
        android:background="@mipmap/laptop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/btnAccesorio"
        android:layout_alignTop="@+id/imageView2"
        android:layout_above="@+id/imageView3"
        android:layout_alignRight="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3"
        android:longClickable="true"
        android:maxHeight="100dp"
        android:maxLength="100" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Computadoras"
        android:id="@+id/textView42"
        android:layout_marginBottom="27dp"
        android:layout_above="@+id/botonSevComp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="normal|bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAccesorio"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2"
        android:background="@mipmap/discodurobueno"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4"
        android:layout_below="@+id/textView42"
        android:layout_above="@+id/textView45"
        android:maxHeight="100dp"
        android:longClickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="    CÃ¡maras"
        android:id="@+id/textView44"
        android:layout_below="@+id/botonSevComp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="normal|bold" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnCams"
        android:background="@mipmap/camara2"
        android:layout_below="@+id/textView44"
        android:layout_alignRight="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3"
        android:layout_alignBottom="@+id/imageView3"
        android:maxHeight="100dp"
        android:maxLength="100" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="  Impresoras"
        android:id="@+id/textView45"
        android:layout_above="@+id/imageView4"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="normal|bold" />

    <ImageView
        android:id="@+id/imageView5"
        android:src="@mipmap/logofinalsevasa"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_gravity="top"
        android:layout_above="@+id/textView42"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnSevImpresoras"
        android:background="@mipmap/impresoraazul"
        android:maxHeight="100dp"
        android:maxLength="100"
        android:layout_alignBaseline="@+id/btnCams"
        android:layout_alignBottom="@+id/btnCams"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4" />

    <Button
        android:text="Contacto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnContSevasa"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/primary_text"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btnSevImpresoras"
        android:layout_alignEnd="@+id/btnSevImpresoras"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Almacenamiento"
        android:id="@+id/textView43"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="normal|bold"
        android:layout_below="@+id/imageView5"
        android:layout_alignRight="@+id/btnContSevasa"
        android:layout_alignEnd="@+id/btnContSevasa" />

</RelativeLayout>
