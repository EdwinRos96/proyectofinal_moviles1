<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AdapterSevasaAccesorios">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tvPrecio"
        android:layout_below="@+id/tvMarca"
        android:layout_alignRight="@+id/tvMarca"
        android:layout_alignEnd="@+id/tvMarca"
        android:layout_alignLeft="@+id/tvMarca"
        android:layout_alignStart="@+id/tvMarca" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imgAccesorio"
        android:contentDescription="imagen1"
        android:visibility="visible"
        android:longClickable="true"
        android:layout_alignTop="@+id/tvNombre"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/tvRam"
        android:layout_toLeftOf="@+id/textView39"
        android:layout_toStartOf="@+id/textView39" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Accesorio"
        android:id="@+id/textView39"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ofertas del mes"
        android:id="@+id/textView40"
        android:textColor="#182bd6"
        android:textSize="25dp"
        android:textIsSelectable="false"
        android:lines="@integer/abc_config_activityDefaultDur"
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imgAccesorio"
        android:layout_toStartOf="@+id/imgAccesorio" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tvNombre"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/textView39"
        android:layout_alignLeft="@+id/tvMarca"
        android:layout_alignStart="@+id/tvMarca" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tvMarca"
        android:layout_below="@+id/tvNombre"
        android:layout_toRightOf="@+id/imgAccesorio"
        android:layout_toEndOf="@+id/imgAccesorio" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tvRam"
        android:layout_below="@+id/tvPrecio"
        android:layout_toRightOf="@+id/imgAccesorio"
        android:layout_toEndOf="@+id/imgAccesorio" />

</RelativeLayout>
