<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="207dp"
        android:id="@+id/imageView6"
        android:background="@mipmap/camara4"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:id="@+id/textView4"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="normal|bold"
        android:text="Cámara Digital Sony DSC-WX100" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textColor="?attr/actionMenuTextColor"
        android:textSize="20sp"
        android:layout_weight="0.32"
        android:text="Exmor R de 18,2 megapíxeles, zoom óptico de 10x, AVCHD Full HD, 3D, LCD de 6,7 cm, modo automático superior Extraplana con zoom óptico de 10x de gran potencia Fotos y películas HD bien enfocadas incluso al caminar Imágenes nítidas y llenas de detalles en condiciones de poca luz" />

    <TextView
        android:text=" Antes: $305"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp" />

    <TextView
        android:text="Precio de Oferta: $290"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="normal|bold" />
</LinearLayout>